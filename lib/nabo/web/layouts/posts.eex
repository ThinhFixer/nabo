<h1 class="page-title">
  All posts
  <span class="badge"><%= Enum.count(posts) %></span>
</h1>
<div class="posts">
  <%= unless Enum.any?(posts) do %>
    <p>Add your first post to priv/posts</p>
  <% end %>
  <%= for post <- posts do %>
  <div class="post">
    <h3><a href="/<%= post.slug %>"><%= post.title %></a></h3>
  </div>
  <%= end %>
</div>
